<!DOCTYPE html>
<html lang="{{@site.locale}}">
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>{{meta_title}}</title>
    <link rel="stylesheet" href="{{asset "css/style.css"}}">
    {{ghost_head}}
</head>
<body class="{{body_class}}">
    <div class="timeline-container">
        <header class="timeline-header">
            <h1>{{@site.title}}</h1>
            <p>{{@site.description}}</p>
        </header>

        <main class="timeline-main">
            <div class="timeline">
                {{#foreach posts}}
                <div class="timeline-item">
                    <div class="timeline-marker"></div>
                    <div class="timeline-content">
                        <article class="post-card">
                            {{#if feature_image}}
                            <img class="post-image" src="{{feature_image}}" alt="{{title}}">
                            {{/if}}
                            <h2><a href="{{url}}">{{title}}</a></h2>
                            <div class="post-meta">
                                <span class="author">{{primary_author.name}}</span>
                                <span class="date">{{date format="MMM DD, YYYY"}}</span>
                                {{#if tags}}
                                <span class="tags">
                                    {{#foreach tags}}
                                    <a href="{{url}}" class="tag">{{name}}</a>
                                    {{/foreach}}
                                </span>
                                {{/if}}
                            </div>
                            <p class="post-excerpt">{{excerpt}}</p>
                            <a href="{{url}}" class="read-more">Read more â†’</a>
                        </article>
                    </div>
                </div>
                {{/foreach}}
            </div>

            {{pagination}}
        </main>
    </div>

    {{ghost_foot}}
</body>
</html>
